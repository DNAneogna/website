---
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getEntry, render, type CollectionEntry } from "astro:content";

const letter = (await getEntry("pages", "letter")) as CollectionEntry<"pages">;
const { title, meta_title, description, image } = letter.data;
const { Content } = await render(letter);
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={title} />
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="letter content">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
